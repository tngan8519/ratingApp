<%- include("partials/header")%>
<!-- form -->
<div class="row">
  <div
    class="col-9 col-sm-6 col-md-7 col-lg-6 mx-auto text-capitalize formdesign"
  >
    <h4 class="text-center">edit individual <%= individual.name%></h4>
    <form
      action="/individual/<%= individual._id%>?_method=put"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="inputdesign">
        <label for="">name</label>
        <input type="text" value="<%= individual.name%>" name="name" />
      </div>
      <img src="../../<%= individual.image%>" alt="" width="20%" />
      <div class="inputdesign">
        <label for="">file</label>
        <input type="file" name="img" />
      </div>
      <div class="inputdesign">
        <label for="">description</label>
        <input
          type="text"
          value="<%= individual.description%>"
          name="description"
        />
      </div>

      <button class="buttondesign">Submit</button>
    </form>
  </div>
</div>
<!-- end of form -->
<%- include("partials/footer")%>
